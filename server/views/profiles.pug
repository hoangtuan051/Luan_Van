    script(type='text/javascript').
      $(document).ready(function(){
              
          //sidebar push
          $('#drop').click(function(){
              var display = $('#nav-accordion').css("display");
              if(display != "none"){
                  $('#container').addClass('sidebar-closed');
                  $('#nav-accordion').attr("style", "display: none");
              }
              else{
                  $('#container').removeClass('sidebar-closed');
                  $('#nav-accordion').attr("style", "display: block");
              }
          });
          
            //animation dropdown
          $('.dcjq-parent-li').click(function(){
              var display =  $('.sub').css("display");
              if(display!="none"){
                  $(".sub").attr("style", "display:none");
                  $('.dcjq-parent-li a.active').removeClass("active");
              }
              else {
                  $(".sub").attr("style", "display:block");
                  $('.dcjq-parent-li a').addClass("active");
              }
          });
            
          $(function () {
          var data = !{JSON.stringify(users)};
            $('#full_name').val(data.fullname);
            if(data.email != null)
                $('#email').val(data.email);
            if(data.phone != null)
                $('#phone').val(data.phone);
            if(data.address != null)    
                $('#address').val(data.address);
          });
          
          $('ul.sidebar-menu li a').click(function(){
              $('ul.sidebar-menu li a').removeClass("active");
              $(this).addClass("active");        
          });
      });
  body
    section#container
      // header start
      header.header.white-bg
        .sidebar-toggle-box
          .fa.fa-bars.tooltips#drop(data-placement='right', data-original-title='Toggle Navigation')
        a.logo(href='.')
          img(src='https://cdn2.tgdd.vn/Products/Images/1784/60331/Tu-Dien-Anh-Viet-Vlook-icon.png', width='30px', alt='Smart Dictionary')
        #top_menu.nav.notify-row
        .top-nav
          ul.nav.pull-right.top-menu
            li
              input.form-control.search(type='text', placeholder='Search')
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', aria-expanded='false', href='#')
                img(src='http://web.hcmus.edu.vn/images/stories/logo-khtn.png', width='20px')
                span.username
                b.caret
              ul.dropdown-menu.extended.logout
                li(style='width:50%; background-color:#a9c;')
                  a(href='.')
                    i.fa.fa-suitcase(style='color:#fff')
                    span(style='color:#fff') Trang chủ
                li(style='width:50%; border-radius:0;')
                  a(href='/logout')
                    i.fa.fa-key Log Out
      aside
        #sidebar.nav-collapse(tabindex='5000', style='overflow:hidden; outline: none;')
          ul#nav-accordion.sidebar-menu(style='display: block;')
            li
              a.active(href='/profiles')
                i.fa.fa-dashboard
                span #{users.fullname}
            li.sub-menu.dcjq-parent-li
              a.dcjq-parent(href='javascript:;')
                i.fa.fa-user
                span Thông tin
                span.dcjq-icon
              ul.sub(style='display:none;')
                li
                  a(href='/profiles') Trang cá nhân
                li
                  a(href='/changepassword') Đổi mật khẩu
            li.sub-menu
              a
                i.fa.fa-envelope
                span Liên hệ
            li.sub-menu(style='margin-left:20px')
              a
                i.fa.fa-envelope-o
                |Email
                span 13clc@student.hcmus.edu.vn
            li.sub-menu(style='margin-left:20px')
              a
                i.fa.fa-phone
                span Điện thoại: 0974479487
      session#main-content
        .wrapper
          session.content
            .panel.panel-default
              .panel-heading
                b Thông tin cá nhân
              .panel-body
                form.form-horizontal(role='from')
                  .form-group
                    label.col-md-3.control-label(for='basic-url')
                      img#imgIcon(src='http://web.hcmus.edu.vn/images/stories/logo-khtn.png', lass='img-thumbnail choose_pic imgIcon', width='100%')
                    .col-md-8
                      .row(style='margin-top:20px')
                        .col-md-9
                          .input-group
                            span#basic-last_name.input-group-addon Họ tên (*)
                            input#full_name.form-control(style='width:100%', type='text', name='full_name', placeholder='Nhập họ tên', value='')
                      .row
                        .col-md-9(style='margin-top:15px')
                          .input-group
                            span#basic-sex.input-group-addon Avatar (*)
                            input(type='file', name='avatar', value='http://web.hcmus.edu.vn/images/stories/logo-khtn.png', style='margin:5px 20px')
                      .row
                        .col-md-9(style='margin-top:15px')
                          .input-group
                            span#basic-sex.input-group-addon Giới tính
                            span(stype='float:left')
                              input(style='margin:10px', type='radio', name='gender', value='nam')
                              |  Nam
                              input(style='margin:10px', type='radio', name='gender', value='nu')
                              |  Nữ
